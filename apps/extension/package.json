{
  "name": "extension",
  "displayName": "Kaidoku Cars",
  "version": "0.0.0",
  "description": "Decode Japanese auction sheets â€” bid smarter.",
  "license": "MIT",
  "scripts": {
    "build": "run-p build:chrome build:firefox",
    "build:chrome": "wxt zip",
    "build:firefox": "wxt -b firefox zip",
    "clean": "git clean -xdf .cache .turbo dist build .plasmo node_modules tsconfig.tsbuildinfo",
    "dev": "bun dev:chrome",
    "dev:chrome": "wxt",
    "dev:firefox": "wxt -b firefox",
    "format": "biome format --write .",
    "lint": "biome check ./src",
    "lint:fix": "biome check ./src --write",
    "postinstall": "wxt prepare",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui --watch",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "test:coverage": "vitest run --coverage --coverage.reporter=text",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@hookform/resolvers": "5.1.1",
    "@repo/auth": "workspace:*",
    "@repo/design-system": "workspace:*",
    "@repo/types": "workspace:*",
    "@repo/web": "workspace:*",
    "@tanstack/react-query": "5.80.7",
    "@webext-core/messaging": "2.3.0",
    "ai": "4.3.16",
    "chrome-ai": "1.11.1",
    "clsx": "2.1.1",
    "consola": "3.4.2",
    "envin": "1.1.3",
    "lucide-react": "0.534.0",
    "marked": "15.0.12",
    "npm-run-all": "4.1.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "7.61.1",
    "react-router": "7.7.1",
    "tailwind-merge": "3.3.1",
    "vite-plugin-svgr": "4.3.0",
    "zod": "3.25.28"
  },
  "devDependencies": {
    "@tailwindcss/vite": "4.1.10",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/bun": "1.2.16",
    "@types/chrome": "0.0.313",
    "@types/node": "22.15.21",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@wxt-dev/auto-icons": "1.0.2",
    "@wxt-dev/module-react": "1.1.3",
    "tailwindcss": "4.1.10",
    "tw-animate-css": "1.3.4",
    "typescript": "5.8.3",
    "vitest": "3.2.4",
    "wxt": "0.20.7"
  }
}
