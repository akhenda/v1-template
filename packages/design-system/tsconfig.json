{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@repo/design-system/*": ["./*"]
    }
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "layouts/**/*.ts",
    "layouts/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "provider/**/*.ts",
    "provider/**/*.tsx",
    "styles/**/*.ts",
    "styles/**/*.tsx",
    "index.ts",
    "index.tsx",
    "keys.ts"
  ],
  "exclude": ["node_modules"]
}
